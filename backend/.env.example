# Database
DATABASE_URL=postgresql://isomix_user:isomix_pass@localhost:5433/isomix

# Redis
REDIS_URL=redis://localhost:6379/0

# Storage
STORAGE_PATH=./storage
STORAGE_TYPE=local  # local ou s3

# S3 (opcional)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_BUCKET_NAME=isomix-audio
# AWS_REGION=us-east-1

# AI Model
AI_MODEL=demucs  # demucs ou spleeter
AI_MODEL_QUALITY=htdemucs  # htdemucs, htdemucs_ft, mdx_extra

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Limits
MAX_FILE_SIZE_FREE_MB=20
MAX_FILE_SIZE_PRO_MB=100
MAX_UPLOADS_PER_DAY_FREE=5

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=True
